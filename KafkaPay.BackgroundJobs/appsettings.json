{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "ConnectionStrings": {
        "Default": "Server=MMAGED\\SQLEXPRESS;Database=KafkaPay;Trusted_Connection=True;TrustServerCertificate=true"
    },
    "KafkaSettings": {
        "BootstrapServers": "localhost:9092",
        "GroupId": "kafka-consumer-id1",
        "AutoOffsetReset": "Earliest",
        "EnableAutoCommit": false,
        "TransactionTopic": "TransactionTopic"
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Error",
                "System": "Error"
            }
        },
        "Enrich": [ "FromLogContext","WithMachineName","WithThreadId" ],
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
                }

            },
            {
                "Name": "File",
                "Args": {
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                    "path": "../logs/BackgroundJobs/log-.txt",
                    "rollingInterval": "Day"
                }
            },
            {
                "Name": "Seq",
                "Args": {
                    "serverUrl": "http://localhost:5341"
                }
            }
        ],
        "Properties": {
            "Service": "BackgroundJobs"
        }
    }
}
